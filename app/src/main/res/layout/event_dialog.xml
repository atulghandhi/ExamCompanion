<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:columnCount="1"
        app:rowCount="6">

        <TextView
            android:id="@+id/dialogTitleType"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/dialogLocation"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/dialogDateTime"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/dialogRepeat"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/dialogNotes"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="4"
            app:layout_rowWeight="3" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>