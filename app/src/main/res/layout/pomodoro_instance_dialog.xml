<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:columnCount="1"
        app:rowCount="4">

        <TextView
            android:id="@+id/pomodoro_history_dialog_dateTime"
            tools:text="DATE_TIME"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/pomodoro_history_dialog_durationPoints"
            tools:text="LENGTH_POINTS"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/pomodoro_history_dialog_target"
            tools:text="_TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET__TARGET_"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/pomodoro_history_dialog_summary"
            tools:text="_SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY__SUMMARY_"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>