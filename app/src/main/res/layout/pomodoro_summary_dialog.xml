<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@null"
        android:padding="10dp"
        app:columnCount="2"
        app:rowCount="2">

        <TextView
            android:layout_margin="5dp"
            android:text="@string/pomodoro_target_achieved"
            app:layout_column="0"
            app:layout_columnWeight="8"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/pomodoro_target_achieved_checkbox"
            android:layout_margin="5dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/pomodoro_summary_edittext"
            android:layout_margin="5dp"
            android:hint="@string/pomodoro_summary_dialog_hint"
            android:inputType="textMultiLine"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="1" />


    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>